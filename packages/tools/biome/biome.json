{
  "$schema": "../../../node_modules/@biomejs/biome/configuration_schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 150
  },
  "organizeImports": {
    "enabled": true
  },
  "overrides": [
    {
      "include": ["*.json"],
      "formatter": {
        "lineWidth": 50
      }
    }
  ]
}
