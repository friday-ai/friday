{
  "name": "friday-server",
  "version": "1.0.0",
  "description": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/friday-ai/friday.git"
  },
  "scripts": {
    "start": "per-env",
    "start:prod": "cross-env NODE_ENV=production SERVER_PORT=1443 node ./dist/server.js",
    "start:dev": "cross-env NODE_ENV=development tsx watch src/server.ts",
    "build": "tsup",
    "build:server": "tsup",
    "test": "cross-env NODE_ENV=test MQTT_PORT=1884 mocha --recursive -r tsx ./test/setup.ts ./test/**/*.test.ts -exit",
    "test:server": "cross-env NODE_ENV=test MQTT_PORT=1884 mocha --recursive -r tsx ./test/setup.ts ./test/**/*.test.ts -exit",
    "test:junit": "cross-env NODE_ENV=test MQTT_PORT=1884 mocha --reporter ./test/utils/junit-spec-reporter.js --reporter-options mochaFile=./test-results.xml --recursive -r tsx ./test/setup.ts ./test/**/*.test.ts -exit",
    "coverage": "nyc pnpm test && nyc report --reporter=text-lcov > coverage.lcov",
    "coverage:junit": "nyc pnpm test:junit && nyc report --reporter=text-lcov > coverage.lcov",
    "lint": "biome check --apply ./src ./test ./seeders ./migrations",
    "generate-doc": "pnpm --parallel generate-doc:rest generate-doc:core",
    "generate-doc:core": "typedoc  --out docs/core/ ./src/core/",
    "generate-doc:rest": "apidoc-markdown -i src/api/routes/ -o docs/rest/ -t gitbook"
  },
  "nyc": {
    "exclude": [
      "src/api/routes/router.ts",
      "src/core/**/index.ts",
      "src/core/friday.ts"
    ],
    "include": [
      "src/api/routes/**/*.ts",
      "src/core/**/*.ts"
    ]
  },
  "dependencies": {
    "@fnando/keyring": "^0.4.0",
    "@friday-ai/docker": "workspace:*",
    "@friday-ai/logger": "workspace:*",
    "@friday-ai/shared": "workspace:*",
    "@types/bluebird": "^3.5.42",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.12.8",
    "@types/node-schedule": "^2.1.7",
    "@types/sequelize": "^4.28.20",
    "@types/umzug": "^2.3.7",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.10",
    "bluebird": "^3.7.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mqtt": "^5.5.5",
    "node-schedule": "^2.1.1",
    "reflect-metadata": "^0.2.2",
    "role-acl": "^4.5.4",
    "sequelize": "^6.37.3",
    "sequelize-typescript": "^2.1.6",
    "sqlite3": "^5.1.7",
    "typescript": "^5.4.5",
    "umzug": "^3.8.0",
    "ws": "^8.17.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.7.2",
    "@friday-ai/tools": "workspace:^",
    "@mathieu_andrade/apidoc-markdown": "^1.0.5",
    "@types/chai": "^4.3.16",
    "@types/chai-as-promised": "^7.1.8",
    "@types/chai-like": "^1.1.3",
    "@types/chai-things": "0.0.38",
    "@types/cors": "^2.8.17",
    "@types/dockerode": "^3.3.29",
    "@types/mocha": "^10.0.6",
    "@types/sinon": "^17.0.3",
    "@types/supertest": "^6.0.2",
    "aedes": "^0.51.0",
    "chai": "^4.4.1",
    "chai-as-promised": "^7.1.1",
    "chai-like": "^1.1.1",
    "chai-things": "^0.2.0",
    "dockerode": "^4.0.2",
    "mocha": "^10.4.0",
    "mocha-junit-reporter": "^2.2.1",
    "nyc": "^15.1.0",
    "sinon": "^17.0.1",
    "supertest": "^7.0.0",
    "tsup": "^8.0.2",
    "tsx": "^4.9.1",
    "typedoc": "^0.25.13",
    "typedoc-plugin-external-module-map": "^2.0.1",
    "typedoc-plugin-markdown": "^4.0.0"
  }
}
