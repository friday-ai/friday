{
  "name": "friday-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "per-env",
    "start:prod": "cross-env NODE_ENV=production SERVER_PORT=1443 node ./dist/src/server.js",
    "start:dev": "cross-env NODE_ENV=development nodemon ./src/server.ts",
    "build": "tsc -p .",
    "test": "cross-env NODE_ENV=test MQTT_PORT=1884 mocha --recursive -r ts-node/register ./test/setup.ts ./test/**/*.test.ts -exit",
    "test:junit": "cross-env NODE_ENV=test MQTT_PORT=1884 mocha --reporter ./test/utils/junit-spec-reporter.js --reporter-options mochaFile=./test-results.xml --recursive -r ts-node/register ./test/setup.ts ./test/**/*.test.ts -exit",
    "coverage": "nyc pnpm test && nyc report --reporter=text-lcov > coverage.lcov",
    "coverage:junit": "nyc pnpm test:junit && nyc report --reporter=text-lcov > coverage.lcov",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ./",
    "lint:fix": "eslint --ext .js,.jsx,.ts,.tsx ./ --fix",
    "generate-doc": "pnpm --parallel generate-doc:rest generate-doc:core",
    "generate-doc:core": "typedoc  --out docs/core/ ./src/core/",
    "generate-doc:rest": "apidoc-markdown -i src/api/routes/ -o docs/rest/ -t gitbook"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/friday-ai/friday.git"
  },
  "prettier": "../../packages/tools/prettier.config.js",
  "nodemonConfig": "../../packages/tools/nodemon.config.js",
  "nyc": {
    "exclude": [
      "src/api/routes/router.ts",
      "src/core/**/index.ts",
      "src/core/friday.ts"
    ],
    "include": [
      "src/api/routes/**/*.ts",
      "src/core/**/*.ts"
    ]
  },
  "dependencies": {
    "@fnando/keyring": "^0.4.0",
    "@friday/shared": "workspace:*",
    "@types/bcrypt": "^5.0.0",
    "@types/bluebird": "^3.5.38",
    "@types/compression": "^1.7.2",
    "@types/dockerode": "^3.3.14",
    "@types/express": "^4.17.15",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^8.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^18.11.18",
    "@types/node-schedule": "^2.1.0",
    "@types/sequelize": "^4.28.14",
    "@types/umzug": "^2.3.3",
    "@types/uuid": "^9.0.0",
    "@types/ws": "^8.5.4",
    "bcrypt": "^5.1.0",
    "bluebird": "^3.7.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dockerode": "^3.3.4",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "fs-extra": "^11.1.0",
    "glob": "^8.0.3",
    "helmet": "^6.0.1",
    "jsonwebtoken": "^9.0.0",
    "mqtt": "^4.3.7",
    "mqtt-packet": "^8.1.2",
    "node-schedule": "^2.1.0",
    "reflect-metadata": "^0.1.13",
    "role-acl": "^4.5.4",
    "sequelize": "^6.28.0",
    "sequelize-typescript": "^2.1.5",
    "sqlite3": "^5.1.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "umzug": "^3.2.1",
    "ws": "^8.12.0"
  },
  "devDependencies": {
    "@mathieu_andrade/apidoc-markdown": "^1.0.5",
    "@types/chai": "^4.3.4",
    "@types/chai-as-promised": "^7.1.5",
    "@types/chai-like": "^1.1.1",
    "@types/chai-things": "0.0.35",
    "@types/cors": "^2.8.13",
    "@types/mocha": "^10.0.1",
    "@types/sinon": "^10.0.13",
    "@types/supertest": "^2.0.12",
    "aedes": "^0.48.1",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "chai-like": "^1.1.1",
    "chai-things": "^0.2.0",
    "mocha": "^10.2.0",
    "mocha-junit-reporter": "^2.2.0",
    "nodemon": "^2.0.20",
    "nyc": "^15.1.0",
    "sinon": "^15.0.1",
    "supertest": "^6.3.3",
    "typedoc": "^0.23.24",
    "typedoc-plugin-external-module-map": "^1.3.2",
    "typedoc-plugin-markdown": "^3.14.0"
  }
}
