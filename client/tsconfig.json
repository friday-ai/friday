{
  "compilerOptions": {
    "strict": true,
    "jsx": "react",
    "target": "es5",
    "module": "ESNext",
    "lib": ["dom", "es2015"],
    "jsxFactory": "h",
    "noEmitHelpers": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
