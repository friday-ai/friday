{
  "name": "friday-web-app",
  "version": "1.0.0",
  "description": "Friday web app",
  "license": "MIT",
  "scripts": {
    "start": "per-env",
    "start:prod": "npm run -s serve",
    "start:dev": "npm run -s dev",
    "dev": "cross-env NODE_ENV=development vite --host",
    "build": "cross-env NODE_ENV=production tsc && vite build",
    "preview": "npm run build && vite preview --host",
    "preview:https": "cross-env HTTPS=true npm run preview",
    "serve": "cross-env NODE_ENV=production npm run build && serve dist",
    "test": "echo \"Error: tests are not yet implemented\" && exit 1",
    "format": "prettier --write src/**/*.{js,jsx,ts,tsx}",
    "lint": "concurrently -k -n \"ESLint\" -c \"blue\" \"eslint --ext .js,.jsx,.ts,.tsx ./src\"",
    "lint:fix": "concurrently -k -n \"ESLint\" -c \"blue\" \"eslint --ext .js,.jsx,.ts,.tsx --fix ./src\""
  },
  "dependencies": {
    "@iconify/react": "^3.1.0",
    "@reduxjs/toolkit": "^1.6.2",
    "@types/react-redux": "^7.1.20",
    "@types/uuid": "^8.3.1",
    "axios": "^0.24.0",
    "cross-env": "^7.0.3",
    "daisyui": "^1.16.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-flip-toolkit": "^7.0.13",
    "react-hot-toast": "^2.1.1",
    "react-redux": "^7.2.6",
    "react-router-dom": "^6.0.2",
    "redux": "^4.1.2",
    "serve": "^13.0.2",
    "tailwindcss": "^2.2.19",
    "uuid": "^8.3.2",
    "workbox-window": "^6.3.0"
  },
  "devDependencies": {
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "@types/react-router-dom": "^5.3.2",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@vitejs/plugin-react": "^1.0.9",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-typescript-prettier": "^4.2.0",
    "postcss": "^8.3.11",
    "prettier": "^2.4.1",
    "typescript": "^4.4.4",
    "vite": "^2.6.14",
    "vite-plugin-pwa": "^0.11.5"
  },
  "resolutions": {
    "postcss": "8.1.10"
  }
}
