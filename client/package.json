{
  "name": "friday-web-app",
  "version": "1.0.0",
  "description": "Friday web app",
  "license": "MIT",
  "scripts": {
    "start": "per-env",
    "start:prod": "npm run build && npm run -s serve",
    "start:dev": "npm run -s dev",
    "build": "concurrently -k -n \"Webpack\" -c \"magenta\" \"webpack --mode=production\"",
    "serve": "concurrently -k -n \"Friday\" -c \"blue\" \"http-server -s -p 1444 ./dist\"",
    "dev": "concurrently -k -n \"Webpack\" -c \"magenta\" \"webpack-dev-server --mode=development --config ./webpack.config.ts --open --hot --host 0.0.0.0\"",
    "test": "concurrently -k -n \"Jest\" -c \"red\" \"jest --coverage\"",
    "lint": "concurrently -k -n \"TS-Lint\" -c \"blue\" \"tslint --force -t stylish -p tsconfig.json -c ../tslint.json\"",
    "lint:fix": "concurrently -k -n \"TS-Lint\" -c \"blue\" \"tslint --force --fix -t stylish -p tsconfig.json -c ../tslint.json\""
  },
  "dependencies": {
    "@babel/core": "^7.8.3",
    "@types/webpack": "^4.41.3",
    "@types/webpack-dev-server": "^3.9.0",
    "babel-loader": "^8.0.6",
    "concurrently": "^5.1.0",
    "copy-webpack-plugin": "^5.1.1",
    "html-webpack-plugin": "^3.2.0",
    "http-server": "^0.12.1",
    "per-env": "^1.0.2",
    "preact": "10.2.1",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tslib": "1.10.0",
    "typescript": "^3.7.5",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1"
  },
  "devDependencies": {
    "@types/jest": "25.1.0",
    "jest": "^25.1.0",
    "tslint": "6.0.0",
    "tslint-consistent-codestyle": "^1.16.0",
    "tslint-loader": "3.5.4"
  }
}
