{
  "name": "friday-web-app",
  "version": "1.0.0",
  "description": "Friday web app",
  "license": "MIT",
  "scripts": {
    "start": "per-env",
    "start:prod": "npm run -s serve",
    "start:dev": "npm run -s dev",
    "dev": "cross-env NODE_ENV=development vite --host",
    "build": "cross-env NODE_ENV=production tsc && vite build",
    "preview": "npm run build && vite preview --host",
    "preview:https": "cross-env HTTPS=true npm run preview",
    "serve": "cross-env NODE_ENV=production npm run build && serve dist",
    "test": "echo \"Error: tests are not yet implemented\" && exit 1",
    "format": "prettier --write src/**/*.{js,jsx,ts,tsx}",
    "lint": "concurrently -k -n \"ESLint\" -c \"blue\" \"eslint --ext .js,.jsx,.ts,.tsx ./src\"",
    "lint:fix": "concurrently -k -n \"ESLint\" -c \"blue\" \"eslint --ext .js,.jsx,.ts,.tsx --fix ./src\""
  },
  "dependencies": {
    "@headlessui/react": "^1.0.0",
    "@iconify/react": "^3.0.1",
    "@reduxjs/toolkit": "^1.5.1",
    "@types/axios": "^0.14.0",
    "@types/react-redux": "^7.1.16",
    "@types/react-router-dom": "^5.1.7",
    "@types/uuid": "^8.3.0",
    "axios": "^0.22.0",
    "cross-env": "^7.0.3",
    "history": "^4.10.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.0",
    "react-hot-toast": "^2.1.1",
    "react-redux": "^7.2.3",
    "react-router-dom": "^5.2.0",
    "redux": "^4.0.5",
    "serve": "^12.0.1",
    "tailwindcss": "^2.2.16",
    "uuid": "^8.3.2",
    "workbox-window": "^6.3.0"
  },
  "devDependencies": {
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@vitejs/plugin-react": "^1.0.1",
    "@vitejs/plugin-react-refresh": "^1.3.1",
    "autoprefixer": "^10.2.5",
    "eslint": "^7.22.0",
    "eslint-config-airbnb-typescript-prettier": "^4.2.0",
    "postcss": "^8.2.8",
    "prettier": "^2.2.1",
    "typescript": "^4.1.2",
    "vite": "^2.6.2",
    "vite-plugin-pwa": "^0.11.2"
  },
  "resolutions": {
    "postcss": "8.1.10"
  }
}
