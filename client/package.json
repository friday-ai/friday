{
  "name": "friday-web-app",
  "version": "1.0.0",
  "description": "Friday web app",
  "license": "MIT",
  "scripts": {
    "start": "per-env",
    "start:prod": "npm run -s serve",
    "start:dev": "npm run -s dev",
    "build": "preact build",
    "serve": "concurrently -k -n \"Friday\" -c \"blue\" \"preact build && preact serve --server superstatic\"",
    "dev": "concurrently -k -n \"Preact\" -c \"magenta\" \"preact watch -p 1444\"",
    "test": "concurrently -k -n \"Jest\" -c \"red\" \"jest --coverage\"",
    "lint": "concurrently -k -n \"TS-Lint\" -c \"blue\" \"tslint --force -t stylish -p tsconfig.json -c ../tslint.json\"",
    "lint:fix": "concurrently -k -n \"TS-Lint\" -c \"blue\" \"tslint --force --fix -t stylish -p tsconfig.json -c ../tslint.json\""
  },
  "dependencies": {
    "@types/sequelize": "^4.28.1",
    "concurrently": "^4.1.0",
    "preact": "^8.3.1",
    "preact-compat": "^3.18.4",
    "preact-router": "^2.6.1",
    "superstatic": "^6.0.4"
  },
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "@types/webpack-env": "^1.13.9",
    "css-loader": "^1.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.6.0",
    "per-env": "^1.0.2",
    "preact-cli": "^2.2.1",
    "preact-render-spy": "^1.3.0",
    "ts-jest": "^23.10.5",
    "ts-loader": "^3.5.0",
    "tslint": "^5.11.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.7.5",
    "tslint-consistent-codestyle": "^1.15.1",
    "typings-for-css-modules-loader": "^1.7.0"
  }
}
