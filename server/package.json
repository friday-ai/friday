{
  "name": "friday-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "per-env",
    "start:prod": "npm run -s serve",
    "start:dev": "npm run -s dev",
    "serve": "concurrently -k -n \"Friday\" -c \"blue\" \"cross-env NODE_ENV=production ts-node ./src/server.ts\"",
    "dev": "concurrently -k -n \"TypeScript,Node\" -c \"blue,green\" \"tsc --watch\" \"cross-env NODE_ENV=development nodemon ./src/server.ts\"",
    "test": "concurrently -k -n \"Jest\" -c \"red\" \"cross-env NODE_ENV=test jest --runInBand --detectOpenHandles\"",
    "test:watch": "concurrently -k -n \"Jest\" -c \"red\" \"cross-env NODE_ENV=test jest --runInBand --watch --detectOpenHandles\"",
    "lint": "concurrently -k -n \"TS-Lint\" -c \"blue\" \"tslint --force -t stylish -p tsconfig.json -c ../tslint.json\"",
    "lint:fix": "concurrently -k -n \"TS-Lint\" -c \"blue\" \"tslint --force --fix -t stylish -p tsconfig.json -c ../tslint.json\"",
    "generate-doc": "npm run -s generate-doc:core && npm run -s generate-doc:rest",
    "generate-doc:core": "concurrently -k -n \"TypeDoc\" -c \"magenta\" \"typedoc  --out docs/core/ ./src/core/\"",
    "generate-doc:rest": "concurrently -k -n \"ApiDoc-MD\" -c \"magenta\" \"apidoc-markdown -i src/api/routes/ -o docs/rest/ -t gitbook\""
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/friday-ai/friday.git"
  },
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/compression": "^1.0.1",
    "@types/express": "^4.16.1",
    "@types/express-rate-limit": "^3.3.3",
    "@types/glob": "^7.1.1",
    "@types/helmet": "0.0.44",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/sequelize": "^4.28.2",
    "@types/uuid": "^3.4.6",
    "@types/ws": "^6.0.3",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "express": "^4.16.4",
    "express-rate-limit": "^5.0.0",
    "glob": "^7.1.5",
    "helmet": "^3.21.2",
    "jsonwebtoken": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.21.1",
    "sequelize-typescript": "^1.0.0-beta.3",
    "sqlite3": "^4.0.8",
    "ts-node": "^8.1.0",
    "ws": "^7.2.0"
  },
  "devDependencies": {
    "@mathieu_andrade/apidoc-markdown": "^1.0.0",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "jest": "^24.8.0",
    "jest-extended": "^0.11.2",
    "nodemon": "^1.19.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "tslint-consistent-codestyle": "^1.15.1",
    "typedoc": "^0.15.0",
    "typedoc-plugin-external-module-map": "^1.0.0",
    "typedoc-plugin-markdown": "^2.0.9",
    "typescript": "^3.4.5"
  }
}
