{
  "name": "friday-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "per-env",
    "start:prod": "npm run -s serve",
    "start:dev": "npm run -s dev",
    "serve": "concurrently -k -n \"Friday\" -c \"blue\" \"cross-env NODE_ENV=production SERVER_PORT=1443 node ./dist/src/server.js\"",
    "dev": "concurrently -k -n \"TypeScript,Node\" -c \"blue,green\" \"tsc --watch\" \"cross-env NODE_ENV=development nodemon ./src/server.ts\"",
    "build": "concurrently -k -n \"TypeScript\" -c \"blue\" \"tsc -p .\"",
    "test": "concurrently -k -n \"Mocha\" -c \"red\" \"cross-env NODE_ENV=test MQTT_PORT=1884 mocha --recursive -r ts-node/register ./test/setup.ts ./test/**/*.test.ts -exit\"",
    "test:junit": "concurrently -k -n \"Mocha\" -c \"red\" \"cross-env NODE_ENV=test MQTT_PORT=1884 mocha --reporter ./test/utils/junit-spec-reporter.js --reporter-options mochaFile=./test-results.xml --recursive -r ts-node/register ./test/setup.ts ./test/**/*.test.ts -exit\"",
    "coverage": "nyc npm test && nyc report --reporter=text-lcov > coverage.lcov",
    "coverage:junit": "nyc npm run test:junit && nyc report --reporter=text-lcov > coverage.lcov",
    "test:watch": "concurrently -k -n \"Jest\" -c \"red\" \"cross-env NODE_ENV=test jest --runInBand --watch --detectOpenHandles\"",
    "lint": "concurrently -k -n \"ESLint\" -c \"blue\" \"eslint --ext .js,.jsx,.ts,.tsx ./\"",
    "lint:fix": "concurrently -k -n \"ESLint\" -c \"blue\" \"eslint --ext .js,.jsx,.ts,.tsx ./ --fix\"",
    "generate-doc": "npm run -s generate-doc:core && npm run -s generate-doc:rest",
    "generate-doc:core": "concurrently -k -n \"TypeDoc\" -c \"magenta\" \"typedoc  --out docs/core/ ./src/core/\"",
    "generate-doc:rest": "concurrently -k -n \"ApiDoc-MD\" -c \"magenta\" \"apidoc-markdown -i src/api/routes/ -o docs/rest/ -t gitbook\""
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/friday-ai/friday.git"
  },
  "nodemonConfig": {
    "watch": [
      "./src",
      "./test"
    ],
    "ext": ".js, .ts"
  },
  "nyc": {
    "exclude": [
      "src/api/routes/router.ts",
      "src/core/**/index.ts",
      "src/core/friday.ts"
    ],
    "include": [
      "src/api/routes/**/*.ts",
      "src/core/**/*.ts"
    ]
  },
  "dependencies": {
    "@fnando/keyring": "^0.4.0",
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/dockerode": "^3.3.9",
    "@types/express": "^4.17.13",
    "@types/express-rate-limit": "^5.1.3",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "@types/helmet": "0.0.48",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.40",
    "@types/node-schedule": "^2.1.0",
    "@types/sequelize": "^4.28.13",
    "@types/umzug": "^2.3.3",
    "@types/uuid": "^8.3.4",
    "@types/ws": "^8.5.3",
    "bcrypt": "^5.0.1",
    "bluebird": "^3.7.2",
    "compression": "^1.7.4",
    "concurrently": "^7.2.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dockerode": "^3.3.1",
    "express": "^4.18.1",
    "express-rate-limit": "^6.4.0",
    "fs-extra": "^10.1.0",
    "glob": "^8.0.3",
    "helmet": "^5.1.0",
    "jsonwebtoken": "^8.5.1",
    "mqtt": "^4.3.7",
    "mqtt-packet": "^7.1.2",
    "node-schedule": "^2.1.0",
    "reflect-metadata": "^0.1.13",
    "role-acl": "^4.5.4",
    "sequelize": "^6.20.1",
    "sequelize-typescript": "^2.1.3",
    "sqlite3": "^5.0.8",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3",
    "umzug": "^3.1.1",
    "ws": "^8.7.0"
  },
  "devDependencies": {
    "@mathieu_andrade/apidoc-markdown": "^1.0.5",
    "@types/chai": "^4.3.1",
    "@types/chai-as-promised": "^7.1.5",
    "@types/chai-like": "^1.1.1",
    "@types/chai-things": "0.0.35",
    "@types/cors": "^2.8.12",
    "@types/mocha": "^9.1.1",
    "@types/sinon": "^10.0.11",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "aedes": "^0.47.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "chai-like": "^1.1.1",
    "chai-things": "^0.2.0",
    "eslint": "^8.17.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-tsdoc": "^0.2.16",
    "mocha": "^10.0.0",
    "mocha-junit-reporter": "^2.0.2",
    "nodemon": "^2.0.16",
    "nyc": "^15.1.0",
    "sinon": "^14.0.0",
    "supertest": "^6.2.3",
    "typedoc": "^0.22.17",
    "typedoc-plugin-external-module-map": "^1.3.2",
    "typedoc-plugin-markdown": "^3.12.1"
  }
}
