{
  "name": "friday-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "per-env",
    "start:prod": "npm run -s serve",
    "start:dev": "npm run -s dev",
    "serve": "concurrently -k -n \"Friday\" -c \"blue\" \"cross-env NODE_ENV=production SERVER_PORT=1443 ts-node ./src/server.ts\"",
    "dev": "concurrently -k -n \"TypeScript,Node\" -c \"blue,green\" \"tsc --watch\" \"cross-env NODE_ENV=development nodemon ./src/server.ts\"",
    "test": "concurrently -k -n \"Mocha\" -c \"red\" \"cross-env NODE_ENV=test mocha --recursive -r ts-node/register ./test/setup.ts ./test/**/*.test.ts -exit\"",
    "coverage": "nyc --report-dir=. --reporter=lcov npm test",
    "test:watch": "concurrently -k -n \"Jest\" -c \"red\" \"cross-env NODE_ENV=test jest --runInBand --watch --detectOpenHandles\"",
    "lint": "concurrently -k -n \"ESLint\" -c \"blue\" \"eslint --ext .js,.jsx,.ts,.tsx ./\"",
    "lint:fix": "concurrently -k -n \"ESLint\" -c \"blue\" \"eslint --ext .js,.jsx,.ts,.tsx ./ --fix\"",
    "generate-doc": "npm run -s generate-doc:core && npm run -s generate-doc:rest",
    "generate-doc:core": "concurrently -k -n \"TypeDoc\" -c \"magenta\" \"typedoc  --out docs/core/ ./src/core/\"",
    "generate-doc:rest": "concurrently -k -n \"ApiDoc-MD\" -c \"magenta\" \"apidoc-markdown -i src/api/routes/ -o docs/rest/ -t gitbook\""
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/friday-ai/friday.git"
  },
  "nyc": {
    "exclude": [
      "src/api/routes/router.ts",
      "src/core/**/index.ts",
      "src/core/friday.ts"
    ],
    "include": [
      "src/api/routes/**/*.ts",
      "src/core/**/*.ts"
    ]
  },
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/compression": "^1.0.1",
    "@types/express": "^4.17.2",
    "@types/express-rate-limit": "^3.3.3",
    "@types/fs-extra": "^8.0.1",
    "@types/glob": "^7.1.1",
    "@types/helmet": "0.0.45",
    "@types/jsonwebtoken": "^8.3.7",
    "@types/node": "^13.5.1",
    "@types/node-schedule": "^1.3.0",
    "@types/sequelize": "^4.28.8",
    "@types/umzug": "^2.2.3",
    "@types/uuid": "^3.4.7",
    "@types/ws": "^7.2.0",
    "bcrypt": "^5.0.0",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "concurrently": "^5.1.0",
    "cross-env": "^7.0.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.0.0",
    "fs-extra": "^8.1.0",
    "glob": "^7.1.6",
    "helmet": "^3.21.2",
    "jsonwebtoken": "^8.5.1",
    "node-schedule": "^1.3.2",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.21.3",
    "sequelize-typescript": "^1.1.0",
    "sqlite3": "^4.1.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5",
    "umzug": "^2.3.0",
    "ws": "^7.2.1"
  },
  "devDependencies": {
    "@mathieu_andrade/apidoc-markdown": "^1.0.1",
    "@types/chai": "^4.2.11",
    "@types/chai-as-promised": "^7.1.2",
    "@types/mocha": "^7.0.2",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^7.2.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-tsdoc": "^0.2.4",
    "mocha": "^7.1.1",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.1",
    "supertest": "^4.0.2",
    "typedoc": "^0.16.9",
    "typedoc-plugin-external-module-map": "^1.0.0",
    "typedoc-plugin-markdown": "^2.2.16"
  }
}
